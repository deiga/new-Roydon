#product-wrapper
  #left
    = form_for @product, remote: true, url: shop_add_to_cart_path(@product), html: {'data-type' => :json, id: 'add-product-to-cart', method: :post} do |f|
      %h2= @product.name

      %p>
      =raw "Hinta: #{@product.price} &euro;"
      %p>
        Lisätietoja:
        %br
        = raw(@product.description)
      - unless @product.empty?
        Vaihtoehtoja:
        - @product.options.each do |x|
          = collection_select :options, x.name, x.values, 'html_safe', 'humanize', {include_blank: true}, {required: 'required'}
      %br
      = f.submit 'Lisää ostoskoriin', class: 'add-to-cart'
  #right
    %img.product-image{:src => @product.image.url(:show)}

%section#shopping_cart.box.first-box
  %strong= link_to 'Ostoskori:', shop_shopping_cart_path(session[:shopping_cart_id])
  %br
  - unless @shopping_cart.nil? || @shopping_cart.empty?
    %table
      %tbody
        - @shopping_cart.latest_items.each do |item|
          %tr
            %td= item.product.name
            %td= " #{item.price} €"
    %span#price>
      = @shopping_cart.price
      €
  - else
    Ei tuotteita
    %br
    %span#price 0.0 &euro;

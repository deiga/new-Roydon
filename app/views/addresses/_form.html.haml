= form_for address do |f|
  = render 'order_errors', object: address
  .field
    = f.label :name
    = f.text_field :name, size: 40
  .field
    = f.label :street
    = f.text_field :street, cols: 40, required: true
  .field
    = f.label :city
    = f.text_field :city, size: 40
  .field
    = f.label :postal_number
    = f.text_field :postal_number, size: 40, required: true
  .field
    = f.label :country
    = f.text_field :country, size: 40
  .field
    = f.label :phone_number
    = f.phone_field :phone_number, size: 40, required: true
  .field
    = f.label :description
    = f.text_area :description, rows: 3, columns: 40
  .field
    = f.label :home
    = f.check_box :home
  .actions
    = f.submit 'Add address'


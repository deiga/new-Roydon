- content_for :content do
  = cache ['top-categories', @top_categories] do
    = render 'mall/layouts/top_menu', top_categories: @top_categories
  %section#sub-navigation-sidebar
    = render 'mall/layouts/search'
    - unless @categories.nil?
      = cache ['sub-categories', @categories] do
        = render 'mall/layouts/category_menu', categories: @categories
  %section#shop-details
    = content_for?(:shop_content) ? yield(:shop_content) : yield
  %section#sidebar
    = render 'devise/menu/login_items'
    = render 'mall/layouts/shopping_cart', cart: @cart
    / = render 'mall/layouts/advertisement'
= render template: 'layouts/application'
